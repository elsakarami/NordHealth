{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "types": ["vite/client","@provetcloud/web-components-vue-types","vitest/globals","vue"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "vueCompilerOptions": {
    "macros": {
      "defineOptions": true
    }
  }
}
